{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "lib": ["es2019"],
    
    "strict": true,
    "sourceMap": true,
    "pretty": true,

    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
  },

  "include": [
    "./src/**/*.ts"
  ],
}
